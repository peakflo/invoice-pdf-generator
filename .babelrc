{
  "presets": ["@babel/preset-env", "@babel/preset-typescript"],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    "@babel/plugin-proposal-optional-chaining",
    "@babel/transform-runtime"
  ],
  "ignore": [
    "src/firestore.ts",
    "**/__mocks__/**/*.js",
    "**/__mocks__/**/*.ts",
    "**/__tests__/**/*.js",
    "**/__tests__/**/*.ts",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
